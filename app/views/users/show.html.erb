<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.picture.url if @user.picture? %>
        <%= @user.name %>
      </h1>
      </br>
      
      <%= link_to "Write a post", newpost_path, class: "btn btn-lg btn-primary" %>
      
    </section>
  </aside>
</div>