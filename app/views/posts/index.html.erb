<p id="notice"></p>

<% provide(:title, "Posts Index") %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date Posted</th>
      <th colspan="20"></th>
    </tr>
  </thead>
  

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td width=70%><%= link_to post.title, post %></td>
        <td width=10%><%= post.user.name %></td>
        <td width=15%><%= post.created_at.strftime("%B %d %Y") %></td>
        
      </tr>
    <% end %>
  </tbody>
  

</table>

<br>

<% if logged_in? %>

  <%= link_to 'New Post', new_post_path %> | 
  <%= link_to 'Home', root_path %>
  
<% else %>

  <%= link_to 'Home', root_path %>
  
<% end %>
