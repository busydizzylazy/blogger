
<%= form_for(@post) do |f| %>
  <%= render 'shared/post_error_messages', object: @post %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
   
  <%= f.label :content %> 
  <%= f.text_area :content, 'data-provider': :summernote %>
  
  </br>
  
  <%= f.label :tags %>
  <%= f.text_field :tag_list, value: f.object.tag_list.to_s %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  
<% end %>
