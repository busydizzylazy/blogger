
<%= form_for(@post) do |f| %>
  <%= render 'shared/post_error_messages', object: @post %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
   
  <%= f.label :content %> 
  <%= f.text_area :content, 'data-provider': :summernote %>
  
  </br>
  
  <%= f.label :tags %>
  <%= f.autocomplete_field :tag_list, autocomplete_tag_name_tags_path, 
                            :value => f.object.tag_list.to_s, 
                            'data-delimiter' => ', 
                            ', 'data-auto-focus' => true,
                            :multiple => true %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  
  </br>
  
  <%= link_to 'Posts', posts_path %>
  
<% end %>
