


<%= form_for(@post) do |f| %>
  <%= render 'shared/post_error_messages', object: @post %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
   
  <%= f.label :content %> 
  <%= f.text_area :content, 'data-provider': :summernote %>
  
  </br>
  
  <%= f.label :tags %>
  <%= f.autocomplete_field :tag_list, autocomplete_tag_name_tags_path, :"data-delimiter" => ', ' %> 


  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  
<% end %>



<script>
    $(document).ready(function() {
        $('#summernote').summernote();
    });
    
</script>