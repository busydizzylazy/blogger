
<%= stylesheet_link_tag "posts", :media => "all" %>

<% provide(:title, @post.title) %>


<head>
  <style>
    
    p { 
      
      font-size: 120%;
      font-family: Lato, sans-serif;
      
      
    }
    
  </style>
</head>

<h1 >
  
  <%= @post.title %>
</h1>

<p>By <%= @post.user.name %> </p>

<p>Posted on <%= @post.created_at.strftime("%B %d %Y") %> at <%= @post.created_at.strftime("%l:%M%P") %></p>

<%= @post.content %>


<p>
  Tags: 
  <% @post.tags.each do |item| %>
    <%= render item %>
  <% end %>

</p>


</br>

<% if logged_in? && @post.user == current_user || logged_in?  && current_user.admin?  %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', posts_path %>

<% else %>


  <%= link_to 'Back', posts_path %>

<% end %>

<%= commontator_thread(@post) %>

