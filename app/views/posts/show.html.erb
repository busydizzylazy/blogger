
<% content_for :stylesheets do %>
 <%= stylesheet_link_tag "posts", :media => "all" %>
<% end %>



<div class="post_format">


<% provide(:title, @post.title) %>



<h1> 
  <%= @post.title %>
</h1>




By <%= @post.user.name %>
  </br>
  
<small>
  Posted on <%= @post.created_at.strftime("%B %d %Y") %> at <%= @post.created_at.strftime("%l:%M%P") %>
</small>

</br>
</br>


<p>
  <%= @post.content %>
</p>


<p>
  Tags: 
  <% @post.tags.each do |item| %>
    <%= render item %>
  <% end %>

</p>


</br>

<% if logged_in? && @post.user == current_user || logged_in?  && current_user.admin?  %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %> |
  <%= link_to 'Back', posts_path %>

<% else %>


  <%= link_to 'Back', posts_path %>

<% end %>

</br>

<%= commontator_thread(@post) %>

</div>

